<?xml version='1.0' encoding='UTF-8'?>
<!--
=== All parameters need to be INTEGER ===

 - Main node within <Inputs> and </Inputs>

 - Fixed-input parameters are with syntax:

    <Input>
      <Name>parameter_name</Name>
      <Value>0.5</Value>
    </Input>

 - Optimizable parameter are with syntax:

    <OptRange>
      <Name>parameter_name</Name>
      <Start>1</Start>
      <Stop>20</Stop>
      <Step>1</Step>
    </OptRange>

For Backtest: only the <Start> value of <OptRange> parameters is read.

Names of input variables must match those in 'mode_factory_sequential'

Names of optimization variables ("fractN_long", "fractN_short")
and "Side_switch" must match in 'validation.cpp'

-->
<Inputs>
    <Input>
        <Name>BOMR_switch</Name>        <!-- 1 = BO, 2 = MR -->
        <Value>2</Value>
    </Input>
    <Input>
        <Name>Side_switch</Name>        <!-- 1 = L, 2 = S, 3 = both -->
        <Value>1</Value>
    </Input>
    <Input>
        <Name>MyStop</Name>             <!--  Stop-Loss in USD per contract -->
        <Value>0</Value>
    </Input>
    <OptRange>
        <Name>POI_switch</Name>         <!-- 1..7:1 -->
        <Start>1</Start>
        <Stop>7</Stop>
        <Step>1</Step>
    </OptRange>
    <OptRange>
        <Name>Distance_switch</Name>    <!-- 1..4:1 -->
        <Start>1</Start>
        <Stop>3</Stop>
        <Step>1</Step>
    </OptRange>
    <OptRange>
        <Name>DOW_switch</Name>         <!-- 0..5:1 -->
        <Start>0</Start>
        <Stop>5</Stop>
        <Step>1</Step>
    </OptRange>
    <OptRange>
        <Name>Intraday_switch</Name>    <!-- 0..10:1 -->
        <Start>0</Start>
        <Stop>10</Stop>
        <Step>1</Step>
    </OptRange>
    <OptRange>
        <Name>Filter1L_switch</Name>    <!-- 0..50:1 -->
        <Start>0</Start>
        <Stop>50</Stop>
        <Step>1</Step>
    </OptRange>
    <OptRange>
        <Name>Filter1S_switch</Name>    <!-- 0..50:1 -->
        <Start>0</Start>
        <Stop>50</Stop>
        <Step>1</Step>
    </OptRange>
    <OptRange>
        <Name>MktRegimeL_switch</Name>  <!-- 0..8:1 -->
        <Start>0</Start>
        <Stop>8</Stop>
        <Step>1</Step>
    </OptRange>
    <OptRange>
        <Name>MktRegimeS_switch</Name>  <!-- 0..8:1 -->
        <Start>0</Start>
        <Stop>8</Stop>
        <Step>1</Step>
    </OptRange>
    <Input>
        <Name>DPS_switch</Name>         <!--  0 (false) or 1 (true) -->
        <Value>0</Value>
    </Input>
    <OptRange>
        <Name>Exit_switch</Name>        <!-- 1..5:1 -->
        <Start>1</Start>
        <Stop>2</Stop>
        <Step>1</Step>
    </OptRange>
    <OptRange>
        <Name>fractN_long</Name>        <!-- 0..5:1 -->
        <Start>0</Start>
        <Stop>4</Stop>
        <Step>1</Step>
    </OptRange>
    <OptRange>
        <Name>fractN_short</Name>       <!-- 0..5:1 -->
        <Start>0</Start>
        <Stop>4</Stop>
        <Step>1</Step>
    </OptRange>
    <Input>
        <Name>epsilon</Name>            <!-- always 0 (used in stability test) -->
        <Value>0</Value>
    </Input>
</Inputs>
