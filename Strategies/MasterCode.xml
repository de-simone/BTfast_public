<?xml version='1.0' encoding='UTF-8'?>
<!--
* === All parameters need to be INTEGER ===
*
* - Main node within <Inputs> and </Inputs>
*
* - Fixed-input parameters are with syntax:
*
*    <Input>
*      <Name>parameter_name</Name>
*      <Value>0.5</Value>
*    </Input>
*
* - Optimizable parameter are with syntax:
*
*    <OptRange>
*      <Name>parameter_name</Name>
*      <Start>1</Start>
*      <Stop>20</Stop>
*      <Step>1</Step>
*    </OptRange>
*
* For Backtest: only the <Start> value of <OptRange> parameters is read.
-->
<Inputs>
    <Input>
        <Name>BOMR_switch</Name>        <!-- 1 = BO, 2 = MR -->
        <Value>1</Value>
    </Input>
    <Input>
        <Name>Side_switch</Name>        <!-- 1 = L, 2 = S, 3 = both -->
        <Value>2</Value>
    </Input>
    <Input>
        <Name>MyStop</Name>             <!--  Stop-Loss in USD per contract -->
        <Value>0</Value>
    </Input>
    <Input>
        <Name>POI_switch</Name>         <!-- 1..8:1 -->
        <Value>6</Value>
    </Input>
    <Input>
        <Name>Distance_switch</Name>    <!-- 1..3:1 -->
        <Value>3</Value>
    </Input>
    <Input>
        <Name>FilterT_switch</Name>     <!-- 0..14:1 -->
        <Value>17</Value>
    </Input>
    <Input>
        <Name>Filter1L_switch</Name>    <!-- 0..50:1 -->
        <Value>0</Value>
    </Input>
    <OptRange>
        <Name>Filter1S_switch</Name>    <!-- 0..50:1 -->
        <Start>6</Start>
        <Stop>50</Stop>
        <Step>1</Step>
    </OptRange>
    <Input>
        <Name>fractN_long</Name>             <!-- 0..5:1 -->
        <Value>0</Value>
    </Input>
    <OptRange>
        <Name>fractN_short</Name>             <!-- 0..5:1 -->
        <Start>2</Start>
        <Stop>4</Stop>
        <Step>1</Step>
    </OptRange>
    <Input>
        <Name>epsilon</Name>            <!-- always 0 (used in stability test) -->
        <Value>0</Value>
    </Input>
</Inputs>
